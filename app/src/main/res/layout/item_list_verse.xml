<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/custom_white_text_color"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="@dimen/default_elevation"
        card_view:cardUseCompatPadding="true" >

        <RelativeLayout
            android:id="@+id/relative_layout_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_date"
                style="@style/default_textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_gray_light"
                android:text="01/06/1993"
                android:textColor="@color/gray_btn_bg_darker_color"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_alignParentTop="true"/>

            <!--<ImageView
                android:id="@+id/iv_item_list_default"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/regular_item_padding"
                android:layout_marginStart="@dimen/regular_item_padding"
                android:layout_marginBottom="@dimen/regular_window_margin"
                android:contentDescription="@string/img_description"
                android:src="@drawable/ic_learning_launcher"
                android:layout_below="@+id/tv_date"/>-->

            <!--
                android:layout_toEndOf="@+id/iv_item_list_default"
                android:layout_toRightOf="@+id/iv_item_list_default"
                -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="2dp"
                android:layout_below="@+id/tv_date">

                <TextView
                    android:id="@+id/tv_verse_title"
                    style="@style/default_textView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:gravity="center_horizontal"
                    android:text="@string/title"
                    android:textAlignment="center"
                    android:textColor="@color/text_default_dark_gray"
                    android:textSize="15sp"
                    android:ellipsize="end"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/tv_verse_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="@dimen/regular_window_margin"
                    android:padding="@dimen/regular_item_padding"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/aux_memory_text"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/md_grey_500"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>