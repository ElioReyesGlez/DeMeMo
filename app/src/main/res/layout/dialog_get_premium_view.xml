<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gray"
    android:orientation="vertical"
    android:padding="@dimen/regular_item_padding">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_anim"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:contentDescription="@string/animated_img"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="premium_badge.json"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_blue"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_margin="@dimen/regular_window_margin"
        android:padding="@dimen/regular_window_padding"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/text_default_dark_gray"
        android:text="@string/get_premium"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/regular_item_padding"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_score_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_gray_light"
                android:layout_margin="2dp"
                android:elevation="2dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/exam_lottie_anim"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/regular_window_margin"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:contentDescription="@string/animated_img"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_fileName="exam.json"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    style="@style/default_textView_title"
                    android:id="@+id/tv_msg_exam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/exam_lottie_anim"
                    android:layout_toStartOf="@+id/iv_checked_exam"
                    android:layout_margin="2dp"
                    android:text="@string/full_access_to_the_verse_memory_evaluator"
                    android:textAlignment="center"
                    android:textColor="@color/dark_gray_btn_bg_color"/>


                <ImageView
                    android:id="@+id/iv_checked_exam"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_checked"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="2dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_leader_board_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_gray_light"
                android:layout_margin="2dp"
                android:elevation="2dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/leader_board_lottie_anim"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/regular_window_margin"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:contentDescription="@string/animated_img"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_fileName="podium.json"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    style="@style/default_textView_title"
                    android:id="@+id/tv_msg_leader_board"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/leader_board_lottie_anim"
                    android:layout_toStartOf="@+id/iv_checked_leader_board"
                    android:layout_margin="2dp"
                    android:text="@string/worldwide_participation_on_dememo_leaderboard"
                    android:textAlignment="center"
                    android:textColor="@color/dark_gray_btn_bg_color"/>

                <ImageView
                    android:id="@+id/iv_checked_leader_board"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_checked"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="2dp" />

            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/horizontal_scroll_btn_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/regular_item_padding"
                android:fillViewport="true"
                android:scrollbars="horizontal">
                <LinearLayout
                    android:id="@+id/lineal_l_buttons_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/premium_dialog_no"
                        style="@style/ok_button"
                        android:layout_margin="@dimen/regular_item_padding"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/regular_window_padding"
                        android:paddingEnd="@dimen/regular_window_padding"
                        android:background="@drawable/selector_gray"
                        android:text="@string/premium_dialog_no" />

                    <Button
                        android:id="@+id/premium_dialog_remind_later"
                        style="@style/ok_button"
                        android:layout_margin="@dimen/regular_item_padding"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/regular_window_padding"
                        android:paddingEnd="@dimen/regular_window_padding"
                        android:background="@drawable/selector_gray"
                        android:text="@string/premium_dialog_cancel" />

                    <Button
                        android:id="@+id/premium_dialog_ok"
                        style="@style/ok_button"
                        android:layout_margin="@dimen/regular_item_padding"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/regular_window_padding"
                        android:paddingEnd="@dimen/regular_window_padding"
                        android:background="@drawable/selector_light_green"
                        android:text="@string/premium_dialog_ok" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>